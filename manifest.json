{
	
	"manifest_version": 2,
	"name": "ずっといっしょ",
	"short_name": "ずっしょ",
	"permissions": [ "*://live.nicovideo.jp/watch/*", "storage" ],
	"version": "0.1",
	"description": "えっ？一緒に暮らしてるの！？",
	
	"background": { "scripts": [ "utils.js", "background/main.js" ] },
	
	"content_scripts": [
		{
			"matches": [ "*://live.nicovideo.jp/watch/*" ],
